<?xml version="1.0"?>
<package >
  <metadata>
    <id>BoC.Sitecore.MvcApp</id>
    <version>1.2.0</version>
    <title>Sitecore Mvc starter app</title>
    <authors>Chris van de Steeg</authors>
    <owners>Chris van de Steeg</owners>
    <licenseUrl>http://en.wikipedia.org/wiki/MIT_License#License_terms</licenseUrl>
    <projectUrl>http://github.com/csteeg</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>Starter app to easily get started with BoC.Sitecore.Mvc</description>
    <releaseNotes>
      - Version 1.2 much better MVC integration by using a SitecoreRoute instead of using standard routing
                    Also moved web.config transform to the base package, since that should happen for all projects that use boc.sitecore.mvc
      - Version 1.1 uses areas and allows for all url routedata to be parsed.
    </releaseNotes>
    <copyright>Copyright 2012</copyright>
    <tags>Sitecore mvc</tags>
    <dependencies>
      <dependency id="BoC.Sitecore.Mvc" version="1.2.0" />
    </dependencies>
  </metadata>
  <files>
    <file src="..\MvcApp\*.*" target="MvcApp" exclude="*.dll" />
    <file src="..\MvcApp\Properties\*.*" target="MvcApp/Properties" exclude="*.dll" />
    <file src="..\MvcApp\Content\**\*.*" target="MvcApp/Content" exclude="*.dll" />
    <file src="..\MvcApp\Controllers\**\*.*" target="MvcApp/Controllers" exclude="*.dll" />
    <file src="..\MvcApp\Models\**\*.*" target="MvcApp/Models" exclude="*.dll" />
    <file src="..\MvcApp\Scripts\**\*.*" target="MvcApp/Scripts" exclude="*.dll" />
    <file src="..\MvcApp\Views\**\*.*" target="MvcApp/Views" exclude="*.dll" />
    <file src="Tools\*.*" target="Tools" exclude="*.dll" />
    <file src="Content\*.*" target="Content" exclude="*.dll" />
  </files>
</package>